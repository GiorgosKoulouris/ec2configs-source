{
    "restartable": "rs",
    "ignore": [
        "node_modules/"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "events": {
        "restart": "echo 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "index.js",
        "functions.js",
        "authConfig.js",
        "routes/",
        "helperFunctions/*.js"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json"
}